{% extends "OrganisationBundle::layout.html.twig" %}

{% block content %}
    <div class="col-lg-11 col-sm-offset-1 content-block">
        <h1 class="text-center">Match n°{{ match.getId() }}</h1>
    </div>
    <div class="col-lg-11 col-sm-offset-1 content content-block" >
        <div class="row">
            <div class="col-lg-6">
                <p>Equipe 1 :</p>
                <p>Joueur 1 : {{ match.getEquipes1().getJoueur1().getNom() }}</p>
                {% if match.getEquipes1().getJoueur2() != null %}
                    <p>Joueur 2 : {{ match.getEquipes1().getJoueur2().getNom() }}</p>
                {% endif %}
            </div>
            <div class="col-lg-6">
                <p>Equipe 2 :</p>
                <p>Joueur 1 : {{ match.getEquipes2().getJoueur1().getNom() }}</p>
                {% if match.getEquipes1().getJoueur2() != null %}
                    <p>Joueur 2 : {{ match.getEquipes2().getJoueur2().getNom() }}</p>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <p>Terrain : {{ match.getTerrain().getNom() }}</p>
                <p>Date : {{ match.getDate()|date('Y-m-d H:i:s') }}</p>
                <p>Arbitre : {{ match.getArbitre().getUsername() }}</p>
                <p>Nombre de set : {{ match.getNbSets() }}</p>
                <p>Compétition : {{ match.getNvxCompet() }}</p>
            </div>
            <div class="col-lg-6">
                <p>Liste des incidents</p>
                {% if not match.getIncidents().isEmpty() %}
                    {% for incid in match.getIncidents() %}
                        <ul>
                            <li>{{ incid.getMotif() }}</li>
                            {% if incid.getJoueur() != null %}
                                <li>Joueur concerné : {{ incid.getJoueur().toString() }}</li>
                            {% endif %}
                        </ul>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}