{% extends 'OrganisationBundle::layout.html.twig' %}

{% block content %}
    <div class="container">
        <h1>{{ rencontre.nvxCompet }} : {{ rencontre.terrain.nom }}</h1>
        <div class="col-sm-12">
            <div class="col-sm-6">
                <div class="col-sm-12">
                    <h3>Equipe 1 :</h3>
                    <button type="button" data-id="{{ rencontre.equipes1.joueur1.id }}" class="btn-therapist btn btn-danger">
                        <i data-toggle="tooltip" data-placement="top" title="Appeler un soigneur" class="fa fa-medkit"></i>
                    </button>
                    <button type="button" data-id="{{ rencontre.equipes1.joueur1.id }}" class="btn btn-warning btn-add-warning" data-toggle="tooltip" data-placement="top" title="Emettre un avertissement" style="margin-left: 5px;">
                        <i class="fa fa-exclamation-triangle"></i>
                    </button>
                    {{ rencontre.equipes1.joueur1}}
                    <i class="icon fa fa-exclamation-triangle" style="visibility:hidden;"></i>
                    <br>
                    {% if rencontre.equipes1.joueur2 != null %}
                        <button type="button" data-id="{{ rencontre.equipes1.joueur2.id }}" class="btn-therapist btn btn-danger">
                            <i  data-toggle="tooltip" data-placement="top" title="Appeler un soigneur" class="fa fa-medkit"></i>
                        </button>
                        <button type="button" data-id="{{ rencontre.equipes1.joueur2.id }}" class="btn btn-warning btn-add-warning" data-toggle="tooltip" data-placement="top" title="Emettre un avertissement" style="margin-left: 5px;">
                            <i class="fa fa-exclamation-triangle"></i>
                        </button>
                        {{ rencontre.equipes1.joueur2 }}
                        <i class="icon fa fa-exclamation-triangle" style="visibility:hidden;"></i>
                        <br>
                    {% endif %}
                </div>
                <div class="col-sm-12 action-btn">
                    <button type="button" id="btn-add-1" data-id="{{ rencontre.equipes1.id }}" class="btn-add-point btn btn-primary">Ajouter un point</button>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="col-sm-12">
                    <h3>Equipe 2 :</h3>
                    <button type="button" data-id="{{ rencontre.equipes2.joueur1.id }}" class="btn-therapist btn btn-danger">
                        <i data-toggle="tooltip" data-placement="top" title="Appeler un soigneur" class="fa fa-medkit"></i>
                    </button>
                    <button type="button" data-id="{{ rencontre.equipes2.joueur1.id }}" class="btn btn-warning btn-add-warning" data-toggle="tooltip" data-placement="top" title="Emettre un avertissement" style="margin-left: 5px;">
                        <i class="fa fa-exclamation-triangle"></i>
                    </button>
                    {{ rencontre.equipes2.joueur1}}
                    <i class="icon fa fa-exclamation-triangle" style="visibility:hidden;"></i>
                    <br>
                    {% if rencontre.equipes2.joueur2 != null %}
                        <button type="button" data-id="{{ rencontre.equipes2.joueur2.id }}" class="btn-therapist btn btn-danger" data-toggle="tooltip" data-placement="top" title="Appeler un soigneur">
                            <i data-toggle="tooltip" data-placement="top" title="Appeler un soigneur" class="fa fa-medkit"></i>
                        </button>
                        <button type="button" data-id="{{ rencontre.equipes2.joueur2.id }}" class="btn btn-warning btn-add-warning" data-toggle="tooltip" data-placement="top" title="Emettre un avertissement" style="margin-left: 5px;">
                            <i class="fa fa-exclamation-triangle"></i>
                        </button>
                        {{ rencontre.equipes2.joueur2 }}
                        <i class="icon fa fa-exclamation-triangle" style="visibility:hidden;"></i>
                        <br>
                    {% endif %}</div>
                <div class="col-sm-12 action-btn">
                    <button type="button" id="btn-add-2" data-id="{{ rencontre.equipes2.id }}" class="btn-add-point btn btn-primary">Ajouter un point</button>
                </div>
            </div>
            <div class="col-sm-8 block-score">
                <div class="col-sm-12 block-equipe">
                    <div class="col-sm-4 block-name" id="equipe1"> Equipe 1 </div>
                    <div class="col-sm-4" id="set-1"></div>
                    <div class="col-sm-2"><span id="jeu-1">0</span></div>
                    <div class="col-sm-2"><span id="point-1">0</span></div>
                </div>
                <div class="col-sm-12 block-equipe">
                    <div class="col-sm-4 block-name" id="equipe2"> Equipe 2 </div>
                    <div class="col-sm-4" id="set-2"></div>
                    <div class="col-sm-2"><span id="jeu-2">0</span></div>
                    <div class="col-sm-2"><span id="point-2">0</span></div>
                </div>
            </div>
        </div>
        <div class="col-sm-8 text-center" id="text-incident" style="display: none; margin-top: 5px;">
            <div class="alert alert-success">
                <strong>Succès!</strong> Incident bien enregistré.
            </div>
        </div>
        <div class="col-sm-8 text-center" id="text-avertissement" style="display: none; margin-top: 5px;">
            <div class="alert alert-success">
                <strong>Succès!</strong> Avertissement bien enregistré.
            </div>
        </div>
        <div class="col-sm-8 text-center" id="text-therapist" style="display: none; margin-top: 5px;">
            <div class="alert alert-success">
                <strong>Succès!</strong> Joueur soigné.
            </div>
        </div>
        <div class="col-sm-8 text-center action-btn">
            <button type="button" data-id="{{ rencontre.id }}" class="btn-add-incident btn btn-primary">Déclarer un incident grave</button>
            </br>
            </br>
        </div>

        <div  id="show-timer"  class="col-sm-offset-1 col-sm-6 text-center" style="visibility: hidden">
            <div class="col-sm-offset-2 col-sm-4 text-center inline-block">Temps de pause : </div>
            <div id="start-timer" class="col-sm-4 text-center inline-block">0:00</div>
            </br>
            </br>
            <button id="fin-pause" type="button" class="btn btn-primary">Début du jeu</button>
        </div>
    </div>

    <!-- Modal -->
    <div id="service" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Premier service</h4>
                </div>
                <div class="modal-body">
                    <p>Selectionner l'équipe qui aura le premier service</p>
                    <div class="col-sm-3">
                        <h3>Equipe 1 :</h3>
                        {{ rencontre.equipes1.joueur1}}
                        {% if rencontre.equipes1.joueur2 != null %}
                            <br> {{ rencontre.equipes1.joueur2 }}
                        {% endif %}
                    </div>
                    <div class="col-sm-3">
                        <h3>Equipe 2 :</h3>
                        {{ rencontre.equipes2.joueur1}}
                        {% if rencontre.equipes2.joueur2 != null %}
                            <br> {{ rencontre.equipes2.joueur2 }}
                        {% endif %}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-id="{{ rencontre.equipes1.id }}" class="btn-service btn btn-primary">Equipe 1</button>
                    <button type="button" data-id="{{ rencontre.equipes2.id }}" class="btn-service btn btn-primary">Equipe 2</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Avertissement</h4>
                </div>
                <div class="modal-body">
                    <p>Indiquez le motif :</p>
                    <textarea class="form-control" rows="5" id="motif"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                    <button type="button"  class="btn btn-primary" id="submitModal" data-dismiss="modal">Valider</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div id="modalIncident" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Incident grave</h4>
                </div>
                <div class="modal-body">
                    <p>Description de l'incident :</p>
                    <textarea class="form-control" rows="5" id="description"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                    <button type="button"  class="btn btn-primary" id="submitIncident" data-dismiss="modal">Valider</button>
                </div>
            </div>
        </div>
    </div>

    <div id="modalFin" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Rencontre terminée</h4>
                </div>
                <div class="modal-footer">
                    <a href="{{ path('tennis_arbitre_home') }}">
                    <button type="button" class="btn btn-default" id="submitFin" >Fermer</button>
                    </a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $('#service').modal();

        // Selection l'équipe qui servira la première
        $( ".btn-service" ).click(function() {
            var url = "{{ path('call_premier_serveur', {'idMatch': rencontre.id, 'idEquipe':'text' }) }}";
            url = url.replace("text", $(this).data("id"));
            $.ajax({url: url, success: function(result){
                /*$("#div1").html(result);*/
                $('#service').modal('toggle');
            }});
        });

       // $("#submitFin").click(function(){
         //   var url = "{{ path('tennis_arbitre_home')}}";
          //  $.ajax({url: url, success: function(msg){
           // }

          //  });
        //});

        // Fin du temps de pause
        $( "#fin-pause" ).click(function() {
            var url = "{{ path('call_fin_pause')}}";
            $.ajax({url: url, success: function(result){
                $('#show-timer').css('visibility', 'hidden');
                document.getElementById("btn-add-1").removeAttribute('disabled');
                document.getElementById("btn-add-2").removeAttribute('disabled');
                clearInterval(timerInterval);
            }});
        });

        //affichage valeur timer
        function changeValue() {
            var newValue = ++value;
            if(newValue == 60){
                minute++;
                value = 0;
            }
            if(value < 10){
                document.getElementById("start-timer").innerHTML = minute+":0"+value;
            }else{
                document.getElementById("start-timer").innerHTML = minute+":"+value;
            }

        }
        var timerInterval = null;
        // Ajouter un point à l'équipe
        $( ".btn-add-point" ).click(function() {
            var url = "{{ path('call_add_point', {'idRencontre': rencontre.id, 'idEquipe':'text' }) }}";
            url = url.replace("text", $(this).data("id"));
            $.ajax({url: url, success: function(result) {
                if(result.finJeu == true){
                    clearInterval(timerInterval);
                    value = 0;
                    minute = 0;
                    timerInterval = setInterval(changeValue, 1000);
                    document.getElementById("btn-add-1").setAttribute('disabled', true);
                    document.getElementById("btn-add-2").setAttribute('disabled', true);
                    $('#show-timer').css('visibility', 'visible');
                }
                /**
                 * Affichage des scores
                 */
                $('#set-1').html("");
                $('#set-2').html("");
                for (var i = 0; i < result.set.length; i++) {
                    var span1 = $('<span/>');
                    span1.text(result.set[i]['equipe1']);
                    $('#set-1').append(span1);

                    var span2 = $('<span/>');
                    span2.text(result.set[i]['equipe2']);
                    $('#set-2').append(span2);
                }
                $("#jeu-1").html(result.jeu.equipe1);
                $("#point-1").html(result.point.equipe1);
                $("#jeu-2").html(result.jeu.equipe2);
                $("#point-2").html(result.point.equipe2);

                /**
                 * Affichage du serveur
                 */
                if (result.service == 1) {
                    if ($('#equipe1').hasClass('serveur') == false) {
                        $('#equipe1').addClass('serveur');
                    }
                    if($('#equipe2').hasClass('serveur')) {
                        $('#equipe2').removeClass('serveur');
                    }
                } else {
                    if($('#equipe2').hasClass('serveur') == false) {
                        $('#equipe2').addClass('serveur');
                    }
                    if($('#equipe1').hasClass('serveur')) {
                        $('#equipe1').removeClass('serveur');
                    }
                }
                if(result.termine){
                    $('#modalFin').modal('show');
                }

            }});
        });

        // Faire appel à un soigneur
        $(".btn-therapist").click(function(){
            var url = "{{ path('call_therapist', {'idRencontre': rencontre.id, 'idJoueur':'text' }) }}";
            url = url.replace("text", $(this).data("id"));

            $.ajax({url: url, success: function(result) {
                $('#text-therapist').css('opacity', 1);
                $('#text-therapist').show();
                $('#text-therapist').delay(1000).fadeTo("slow", 0, function() { $(this).remove(); });
            }});
        });

        // Ajouter un avertissement
        $( ".btn-add-warning" ).click(function() {

            var icon = $(this).nextAll('.icon:first');
            var idJoueur = $(this).data("id")

            $('#myModal').modal('show');

            $("#submitModal").click(function(){

                var url = "{{ path('add_warning', {'idRencontre': rencontre.id, 'idJoueur':'text' }) }}";
                url = url.replace("text", idJoueur);
                var motif = $('textarea#motif').val();

                $.ajax({
                    url: url,
                    type: 'POST',
                    data: { content: motif },
                    success: function(result) {
                        icon.css("visibility", "visible");
                        $('#text-avertissement').css('opacity', 1);
                        $('#text-avertissement').show();
                        $('#text-avertissement').delay(1000).fadeTo("slow", 0, function() { $(this).remove(); });
                }});
            })

        });

        // Declarer un incident grave
        $( ".btn-add-incident" ).click(function() {

            $('#modalIncident').modal('show');

            $("#submitIncident").click(function(){

                var url = "{{ path('add_incident', {'idRencontre': rencontre.id }) }}";
                var description = $('textarea#description').val();

                $.ajax({
                    url: url,
                    type: 'POST',
                    data: { content: description },
                        success: function(result) {
                            $('#text-incident').css('opacity', 1);
                            $('#text-incident').show();
                            $('#text-incident').delay(1000).fadeTo("slow", 0, function() { $(this).remove(); });
                }});
            })

        });

        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
{% endblock %}