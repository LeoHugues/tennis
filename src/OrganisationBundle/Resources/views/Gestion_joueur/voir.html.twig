{% extends "OrganisationBundle::layout.html.twig" %}

{% block content %}
    <div class="col-sm-9 col-sm-offset-1 content-block">
        <h1 class="text-center">Gestion des joueurs</h1>
    </div>
    <div class="col-sm-9 col-sm-offset-1 content content-block" >
        <div class="col-sm-3 ">
            <img style="width : 100px; height : 100px" src="{{ asset(joueur.nationalite.path) }}"/>
        </div>
        <div class="col-sm-6 ">
            <p>Nom : {{ joueur.nom }}</p>
            <p>Pr√©nom : {{ joueur.prenom }}</p>
            <p>Victoire : {{ joueur.nbVictoire }}</p>
            <p>Date de naissance : {{ joueur.naissance|date("m/d/Y") }}</p>
            <p>Classement : {{ joueur.classement }}</p>
        </div>
        <div>
            <p>Liste des avertissements</p>
            <li>
                {% for incid in joueur.incidents %}
                    <ul>{{ incid.getMotif() }}</ul>
                {% endfor %}
            </li>
        </div>

    </div>
{% endblock %}