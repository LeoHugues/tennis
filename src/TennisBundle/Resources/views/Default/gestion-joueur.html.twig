{% extends 'TennisBundle::layout.html.twig' %}

{% block content %}
    <div class="col-sm-9 col-sm-offset-1 content-block">
        <h1 class="text-center">Gestion des joueurs</h1>
    </div>
    <div class="col-sm-9 col-sm-offset-1 content-block">
        <a href="{{ path('gestion-joueur_creer-joueur') }}">
            <span class="text-center">
                Cr√©er un joueur
            </span>
        </a>
    </div>
    <div class="col-sm-9 col-sm-offset-1 sub-content">
        <ul>
            {% for joueur in joueurs %}
                <li class="col-sm-6 col-lg-4 thumbnail">
                    <div class="li-text">
                        <h4 class="li-head">
                            <a href="#">{{ joueur.getNom() }} {{ joueur.getPrenom() }}</a>
                        </h4>
                        <p class="">
                            Nombre de victoire : {{ joueur.getNbVictoire() }}
                        </p>
                        <p>
                            {% if joueur.avertissements.isEmpty() %}
                                Avertissements : Non
                            {% else %}
                                Avertissements : Oui
                            {% endif %}
                        </p>
                        <span class="btn-success"><a href="/gestion-joueur"</span>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>


{% endblock %}