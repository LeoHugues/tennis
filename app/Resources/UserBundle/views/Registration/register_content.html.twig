{% block content %}
    {% if is_granted('ROLE_ADMIN') %}
        <div class=" col-sm-8 col-sm-offset-1">
            <div class="col-sm-offset-1 well content-block col-sm-12 user-form">
                <h1 class="text-center">Cr√©ation d'un utilisateur</h1>
                {{ form_start(form, {'method': 'post', 'action': path('user-registration'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                {{ form_widget(form) }}
                <input class="btn btn-success" type="submit" value="Valider"/>
                {{ form_end(form) }}
            </div>
        </div>
    {% else %}
        <div class=" col-sm-8 col-sm-offset-1">
            <div class="col-sm-offset-1 well content-block col-sm-12 user-form">
                <h1 class="text-center">S'inscrire</h1>
                {{ form_start(form, {'method': 'post', 'action': path('user-registration'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                {{ form_widget(form) }}
                <input class="btn btn-success" type="submit" value="Valider"/>
                {{ form_end(form) }}
            </div>
        </div>
    {% endif %}
{% endblock %}