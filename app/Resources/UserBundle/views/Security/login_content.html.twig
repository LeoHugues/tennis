{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class=" col-sm-8 col-sm-offset-1">
    <div class="col-sm-offset-1 well window-connection content-block col-sm-12 user-form">
        <div class="margin-top-30">
            <h1 class="text-center">Connection</h1>
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                <div class="form-group">
                    <label for="username" class="col-sm-2 control-label">{{ 'security.login.username'|trans }}</label>

                    <div class="col-sm-10">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />
                    </div>

                </div>

                <div class="form-group">
                    <label for="password" class="col-sm-2 control-label">{{ 'security.login.password'|trans }}</label>
                    <div class="col-sm-10">
                        <input type="password" id="password" name="_password" required="required" class="form-control"/>
                    </div>
                </div>

                <div class="col-lg-offset-2 col-sm-2">
                    <input  class="" type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label class="" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </div>
                <div class="col-lg-offset-10">
                    <input class="btn btn-default" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                </div>
            </form>
        </div>
    </div>
</div>